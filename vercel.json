{
  "version": 2,
  "builds": [
    {
      "src": "quiz-app-fullstack/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/sessions/([^/]+)/answers",
      "dest": "/api/sessions/[id]/answers.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/quiz-app-fullstack/client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
