{
  "version": 2,
  "builds": [
    {
      "src": "quiz-app-fullstack/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "quiz-app-fullstack/server/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "quiz-app-fullstack/server/src/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/quiz-app-fullstack/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
